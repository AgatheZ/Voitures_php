{% extends 'base.html.twig' %}

{% block title %}Mes factures{% endblock %}

{% block body %}
    <h2 class="text-center font-weight-light mt-3 mb-4">Factures</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numfacture</th>
                <th>DateFacture</th>
                <th>KmCompteur</th>
                <th>MontantHT</th>
                <th>MontantTTC</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.numfacture }}</td>
                <td>{{ facture.dateFacture ? facture.dateFacture|date('m-d-Y') : '' }}</td>
                <td>{{ facture.kmCompteur }}</td>
                <td>{{ facture.montantHT }}</td>
                <td>{{ facture.montantTTC }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}">Create new</a>
{% endblock %}
