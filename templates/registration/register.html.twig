{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <body>
  <div class="container bg-info">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
            
          </div>
          <div class="card-body">
            <h5 class="card-title text-center">S'enregistrer</h5>
            <form class="form-signin">

              <div class="form-label-group">
              <label for="inputEmail">Adresse email</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required>
                
              </div>
              
              <hr>

              <div class="form-label-group">
              <label for="inputPassword">Mot de passe</label>
                <input type="password" id="inputPassword" class="form-control mb-4" placeholder="Mot de passe" required>
                
              </div>
              
              <div class="form-label-group">
              <label for="inputConfirmPassword">Confirmer le mot de passe</label>
                <input type="password" id="inputConfirmPassword" class="form-control mb-4" placeholder="Mot de passe" required>
                
              </div>

              <button class="btn btn-lg btn-primary btn-block mb-4" type="submit">S'enregistrer</button>
              <a class="d-block text-center mt-2 small mb-4" href="{{ path('app_login')}}">Se connecter</a>
              <hr class="my-4">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
{% endblock %}
