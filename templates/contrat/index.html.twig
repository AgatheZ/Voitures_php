{% extends 'base.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block body %}
<div class="container-fluid px-5">
    <h2 class="text-center font-weight-light mt-4 mb-5">Liste des contrats</h2>

    <table class="table">
        <thead>
            <tr>
                <th>N° de contrat</th>
                <th>Client</th>
                <th>Type</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            
            <tr>
                <td>{{ contrat.numContrat }}</td>
                <td>{{ contrat.Client.prenom }} {{ contrat.Client.nom }}</td>
                <td>{{ contrat.type }}</td>
                <td>{{ contrat.dateDebut ? contrat.dateDebut|date('d-m-Y') : '' }}</td>
                <td>{{ contrat.dateFin ? contrat.dateFin|date('d-m-Y') : '' }}</td>
                
                <td>
                <div class="d-inline-flex align-items-center">
                            <a title="Modifier le contrat" class="mr-2" href="{{ path('contrat_edit', {'id': contrat.id}) }}">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            {{ include('contrat/_delete_form.html.twig') }}
                             </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contrat_new') }}">Nouveau contrat</a>
{% endblock %}
